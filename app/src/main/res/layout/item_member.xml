<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_border_line"
    android:layout_margin="5dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_other" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMemberId"
            style="@style/itemHead" />

        <TextView
            android:id="@+id/tvMemberName"
            style="@style/itemBody"
            android:layout_below="@id/tvMemberId" />

        <TextView
            android:id="@+id/tvMemberPosition"
            style="@style/itemBody"
            android:layout_below="@id/tvMemberName" />

        <TextView
            android:id="@+id/tvMemberDepartment"
            style="@style/itemBody"
            android:layout_below="@id/tvMemberPosition" />
    </RelativeLayout>

</LinearLayout>